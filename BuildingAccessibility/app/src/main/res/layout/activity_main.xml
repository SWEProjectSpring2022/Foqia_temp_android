<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="@color/grey"
        android:onClick="onAboutClick"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  Building Accessibility"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft = "35sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Your guide to accessibility at Bryn Mawr College"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/view_bg"
            android:onClick="onViewButtonClick"
            android:orientation="horizontal"
            android:padding="3dp" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Buildings"
                    android:textStyle="bold"
                    android:textSize="23sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View campus buildings"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="8dp"
                android:src="@drawable/outline_apartment_black_48"
                android:layout_marginLeft="45dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/view_bg"
            android:onClick="onSearchButtonClick"
            android:orientation="horizontal"
            android:padding="3dp" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search Features"
                    android:textStyle="bold"
                    android:textSize="23sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search by name or attribute"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="8dp"
                android:src="@drawable/outline_search_black_48"
                android:layout_marginLeft="12dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/view_bg"
            android:onClick="onPostButtonClick"
            android:orientation="horizontal"
            android:padding="3dp" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Forum"
                    android:textStyle="bold"
                    android:textSize="23sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discuss accessibility"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="normal"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="8dp"
                android:src="@drawable/outline_forum_black_48"
                android:layout_marginLeft="60dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>